---
import Layout from "../layouts/Layout.astro";
import PageHeader from "../components/layout/PageHeader.astro";
---

<Layout title="Hiring Tips">
  <PageHeader
    title="Hiring tips"
    subtitle="Articles and discussions on alternatives to whiteboard-style interviews."
  />

  <div class="space-y-6">
    <!-- Discussion section -->
    <section aria-labelledby="discussion-heading" class="space-y-3">
      <h2 id="discussion-heading" class="text-lg font-semibold">Discussion</h2>

      <ul class="space-y-2">
        <li>
          <a
            href="https://news.ycombinator.com/item?id=13874026"
            class="underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-accent"
          >
            Hacker News discussion (2017)
          </a>
        </li>
        <li>
          <a
            href="https://news.ycombinator.com/item?id=23981795"
            class="underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-accent"
          >
            Hacker News discussion (2020)
          </a>
        </li>
      </ul>
    </section>

    <!-- Articles section -->
    <section aria-labelledby="articles-heading" class="space-y-3">
      <h2 id="articles-heading" class="text-lg font-semibold">Articles</h2>

      <ul class="space-y-2">
        <li>
          <a
            href="https://theoutline.com/post/1256/finding-a-better-alternative-to-the-whiteboard-interview"
            class="underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-accent"
          >
            Finding a better alternative to the whiteboard interview
          </a>
        </li>
        <li>
          <a
            href="https://jes.al//2023/03/how-to-hire-engineering-talent-without-the-bs/"
            class="underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-accent"
          >
            How to hire engineering talent without the BS
          </a>
        </li>
        <li>
          <a
            href="http://www.aaronsw.com/weblog/hiring.en"
            class="underline-offset-4 hover:underline focus:outline-none focus-visible:ring-2 focus-visible:ring-accent"
          >
            How I Hire Programmers
          </a>
          <span class="text-sm text-text-mutedLight dark:text-text-mutedDark">
            by Aaron Swartz
          </span>
        </li>
      </ul>
    </section>

    <!-- Attribution -->
    <footer class="pt-4 border-t border-border-light dark:border-border-dark">
      <p class="text-sm text-text-mutedLight dark:text-text-mutedDark">
        Links and descriptions adapted from the hiring-without-whiteboards
        repository. All credit for the original curation belongs to its authors
        and contributors.
      </p>
    </footer>
  </div>
</Layout>
