---
interface Props {
  remainingLocations: string[];
  count: number;
}

const { remainingLocations, count } = Astro.props;
---

<button
  class="relative inline-flex items-center rounded bg-surface-light dark:bg-surface-dark px-2 py-1 text-xs text-text-mutedLight dark:text-text-mutedDark border border-border-light dark:border-border-dark hover:bg-bg-light dark:hover:bg-bg-dark focus:outline-none focus:ring-2 focus:ring-accent"
  aria-describedby="tooltip"
  type="button"
>
  +{count}
  <div
    id="tooltip"
    class="absolute top-0 left-full ml-2 invisible bg-bg-light dark:bg-bg-dark border border-border-light dark:border-border-dark rounded p-2 text-xs text-text-light dark:text-text-dark shadow-lg max-w-md z-10"
    role="tooltip"
  >
    <div class="flex flex-col space-y-1">
      {remainingLocations.map((loc) => <span>{loc}</span>)}
    </div>
  </div>
</button>

<style>
  button:hover #tooltip,
  button:focus #tooltip {
    visibility: visible;
  }
</style>
